@using System.Web
@using JetBrains.Annotations
@inject NavigationManager _navigationManager

<TextEdit Placeholder="Seach..." Width="Width.Is25" Text="@Filter" TextChanged="@OnFilterChanged"/>
<MButton Icon>
    <MIcon>mdi-magnify</MIcon>
</MButton>

@code {

    [CanBeNull]
    [Parameter]
    public string Filter { get; set; }

    Task OnFilterChanged(string value)
    {
        Filter = value;
        _navigationManager.NavigateTo($"/s/{HttpUtility.UrlEncode(Filter)}", true);
        StateHasChanged();
        return Task.CompletedTask;
    }

}