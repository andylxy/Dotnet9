@page "/games"

<PageTitle>在线游戏-Dotnet工具箱</PageTitle>

<MRow>
    <MCol Class="mt-2"
          Cols="12">
        <strong style="padding-left: 10px;">在线游戏</strong>
    </MCol>

    @foreach (var item in GlobalData.GameItems)
    {
        <MCol Cols="6"
              Md="4">
            <CardItem Title="@item.Name" Memo="@item.Memo" Cover="@item.Cover" Url="@item.Url" />
        </MCol>
    }
</MRow>