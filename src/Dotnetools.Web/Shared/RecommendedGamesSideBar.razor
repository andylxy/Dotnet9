<MCard MaxWidth="450"
       Class="mx-auto">
    <MList ThreeLine>
        <MSubheader>推荐游戏</MSubheader>
        @foreach (var item in _items)
        {
            <MDivider Inset="true"></MDivider>
            <MListItem Class="game-item">
                <MListItemAvatar>
                    <MImage Src="@item.Cover"></MImage>
                </MListItemAvatar>

                <MListItemContent>
                    <MListItemTitle Class="game-title">
                        <a href="@item.Url">@((MarkupString)item.Name)</a>
                    </MListItemTitle>
                </MListItemContent>
            </MListItem>
        }
    </MList>
</MCard>

@code
{
    readonly ToolItem[] _items = new[]
    {
        ToolKind.GameTetris.Item()!,
        ToolKind.GameMinesweeper.Item()!
    };
}