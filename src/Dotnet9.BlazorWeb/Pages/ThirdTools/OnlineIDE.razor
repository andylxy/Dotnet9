@page "/ide"
@layout EmptyLayout

@inject ISystemClientService SystemClientService

<PageTitle>在线IDE</PageTitle>

<iframe style="position: absolute;width: 100%;height: 100%;" src="https://webassembly.tokengo.top:8843?home=@(_siteInfo?.Domain)"></iframe>

@code {
    SiteInfoDto? _siteInfo;

    protected override async Task OnInitializedAsync()
    {
        _siteInfo = await SystemClientService.GetSiteInfoAsync();
    }

}