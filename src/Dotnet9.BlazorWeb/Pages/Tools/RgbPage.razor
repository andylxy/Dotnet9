@page "/tools/rgb"
@inject IJSRuntime JsRuntime

<ToolItemPageContent Kind="ToolKind.ToolRgb" />

@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            await JsRuntime.InvokeVoidAsync("window.showNormalColors");
        }
    }
}