            <input name="tbname" value="news" type="hidden">
            <input name="Submit" class="input_submit" value="搜索" type="submit">
        </form>
    </div>
    <div class="logo"><a href="#"><img src="images/logo.png">
            <h2 class="logo-title">@SiteOptions.Value.AppName</h2>
