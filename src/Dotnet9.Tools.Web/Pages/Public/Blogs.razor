@page "/blogs"
@using Dotnet9.Tools.Web.Models
@layout PublicLayout

<ItemList Title="@T("Blogs")" Items="_items"></ItemList>

@code {

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    List<ItemInfo>? _items;

    public string T(string key)
    {
        return MainLayout?.T(key) ?? string.Empty;
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _items = ConstDatas.PostItems!.Select(x => new ItemInfo(x.Title, x.Description, x.Cover, $"/post/{x.Slug}")).ToList();
    }

}