@page "/cat"
@using Dotnet9.Tools.Web.Models
@layout PublicLayout

<ItemList Title="@T("Category")" Items="_items"></ItemList>

@code {

    [Parameter]
    [SupplyParameterFromQuery]
    public string? Slug { get; set; }

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    List<ItemInfo>? _items;

    public string T(string key)
    {
        return MainLayout?.T(key) ?? string.Empty;
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (string.IsNullOrWhiteSpace(Slug))
        {
            _items = ConstDatas.PostItems!.Select(x => new ItemInfo(x.Title, x.Description, x.Cover, $"/post?slug={x.Slug}")).ToList();
        }
        else
        {
            var category = ConstDatas.CategoryItems!.FirstOrDefault(x => x.Slug == Slug);
            if (category == null) return;

            var posts = ConstDatas.PostItems!.FindAll(x => x.Categories.Contains(category.Name));
            _items = posts.Select(x => new ItemInfo(x.Title, x.Description, x.Cover, $"/post?slug={x.Slug}")).ToList();
        }
    }

}