@page "/tools"
@using Dotnet9.Tools.Web.Models
@using Dotnet9.Tools.Web.Shared.Public
@layout DocLayout

<CardItemList Title="@T("Tools")" Items="_tools"/>

@code {

    readonly List<CardItem> _tools = new();

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    public string T(string key)
    {
        return MainLayout?.T(key) ?? string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        _tools.Add(new CardItem(T("IcoToolTitle"), T("IcoToolDesc"), "doc/blog_contents/uploads/2022/02/cover_13.jpg", "/ico"));
        _tools.Add(new CardItem(T("TimestampToolTitle"), T("TimestampToolDesc"), "doc/blog_contents/uploads/2022/02/cover_17.jpeg", "/timestamp"));

        await base.OnInitializedAsync();
    }

}