@page "/album"
@using Dotnet9.Tools.Web.Models
@layout PublicLayout

<ItemList Title="@T("Album")" Items="_items"></ItemList>

@code {

    [Parameter]
    [SupplyParameterFromQuery]
    public string? Slug { get; set; }

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    List<ItemInfo>? _items;

    public string T(string key)
    {
        return MainLayout?.T(key) ?? string.Empty;
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (string.IsNullOrWhiteSpace(Slug))
        {
            _items = ConstDatas.AlbumItems!.Select(x => new ItemInfo(x.Name, "", x.Cover, $"/algum/{Slug}")).ToList();
        }
        else
        {
            var album = ConstDatas.AlbumItems!.FirstOrDefault(x => x.Slug == Slug);
            if (album == null) return;

            var posts = ConstDatas.PostItems!.FindAll(x => x.Albums != null && x.Albums.Contains(album.Name));
            _items = posts.Select(x => new ItemInfo(x.Title, x.Description, x.Cover, $"/post/{x.Slug}")).ToList();
        }
    }

}