@using Dotnet9.Tools.Web.Models
@using BlazorComponent
<MRow Justify="JustifyTypes.Center" NoGutters>
    @foreach (var link in _links)
    {
        <MButton Color="white" Text Rounded Class="my-2" Target="_blank" Href="@link.Url">
            @link.Name
        </MButton>
    }
    <MCol Class="primary lighten-2 py-4 text-center white--text" Cols="12">
        Copyright © 2022-@DateTime.Now.Year
        <strong>
            <a class="footer-link" target="_blank" href="https://dotnet9.com">Dotnet9</a>
        </strong> All right reserved. By
        <strong>
            <a class="footer-link" target="_blank" href="https://dotnet.microsoft.com/en-us/download/dotnet/7.0">.NET 7.0</a>
        </strong> powerful driver.
    </MCol>
</MRow>

@code
{
    private FriendLink[] _links =
    {
        new("Dotnet9", "https://dotnet9.com"),
        new(".NET 7.0", "https://dotnet.microsoft.com/en-us/download/dotnet/7.0"),
        new("ASP.NET Core Blazor" +
