@using BlazorComponent.I18n
@using Dotnet9.Tools.Web.Models
@layout PublicLayout
@inject I18n I18N

<PageTitle>@Title</PageTitle>

<MCard>

    <MRow>
        @if (Items != null)
        {
            @foreach (var tool in Items)
            {
                <MCol key="@tool.Title" Class="col-xl-3 col-lg-4 col-sm-6 col-12 text-truncate">
                    <MCard>
                        <MImage Src="@tool.Cover" Class="white--text align-end" Gradient="to bottom, rgba(0,0,0,.1), rgba(0,0,0,.5)" Height=150>
                            <MCardTitle>@tool.Title</MCardTitle>
                        </MImage>

                        <MCardActions>
                            <span class="tool-desc">@tool.Description</span>
                            <MSpacer></MSpacer>
                            <a href="@tool.Url">@T("ToolsGo")</a>
                        </MCardActions>
                    </MCard>
                </MCol>
            }
        }
    </MRow>

</MCard>

@code
{
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public List<CardItem>? Items { get; set; }

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    public string T(string key)
    {
        return MainLayout?.T(key) ?? string.Empty;
    }
}

<style>
    .tool-desc {
        color: #999;
        font-size: 11px;
    }
</style>