<MRow>
    <MCol>
        <MButton Class="ma-1"
                 Depressed Color="primary"
                 OnClick="() => _showPost = !_showPost">
            @T("HowToDevelopmentDesc")
        </MButton>
        @if (!string.IsNullOrWhiteSpace(RemotePostUrl))
        {
            <MButton Class="ma-1"
                     Href="@RemotePostUrl"
                     Target="_blank"
                     Depressed Color="error">
                @T("ToSuggest")
            </MButton>
        }
        <MButton Dark Class="ma-1"
                 Color="black"
                 Href="@SourceCodeUrl"
                 Target="_blank">
            <MIcon Left>mdi-github</MIcon>
            @T("SourceCode")
        </MButton>
    </MCol>
</MRow>
@if (_showPost)
{
    <MRow>
        <MCol>
            <D9Markdown LocalPostFilePath="@LocalPostFilePath"/>
        </MCol>
    </MRow>

    <MRow>
        <MCol>
            <MButton Class="ma-1"
                     Depressed Color="primary"
                     OnClick="() => _showPost = !_showPost">
                @T("HowToDevelopmentDesc")
            </MButton>
            @if (!string.IsNullOrWhiteSpace(RemotePostUrl))
            {
                <MButton Class="ma-1"
                         Href="@RemotePostUrl"
                         Target="_blank"
                         Depressed Color="error">
                    @T("ToSuggest")
                </MButton>
            }
            <MButton Dark Class="ma-1"
                     Color="black"
                     Href="@SourceCodeUrl"
                     Target="_blank">
                <MIcon Left>mdi-github</MIcon>
                @T("SourceCode")
            </MButton>
        </MCol>
    </MRow>
}

@code
{
    [Parameter]
    public string LocalPostFilePath { get; set; } = null!;

    [Parameter]
    public string? RemotePostUrl { get; set; } = null;

    [Parameter]
    public string SourceCodeUrl { get; set; } = null!;

    [CascadingParameter]
    public PublicLayout? MainLayout { get; set; }

    private bool _showPost;


    public string? T(string key)
    {
        return MainLayout?.T(key);
    }
}