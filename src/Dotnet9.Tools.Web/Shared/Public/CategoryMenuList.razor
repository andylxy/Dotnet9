@using Dotnet9.Tools.Web.Models
@using Dotnet9.Tools.Web.Utils

@if (OnlyUseList)
{
@foreach (var item in ConstData.CategoryNotTreeItems)
{
    <MListItem Link Href="@item.Slug.GetCategoryUrl()">
        <MListItemAvatar Size="24">
            <MIcon Class="blue" Dark>mdi-clipboard-text</MIcon>
        </MListItemAvatar>

        <MListItemContent>
            <MListItemTitle>@item.Name</MListItemTitle>
        </MListItemContent>
    </MListItem>
}
}
else
{
    <MRow Style="max-width: 500px;">
        @foreach (var item in ConstData.CategoryNotTreeItems)
        {
            <MCol>
                <MButton Color="black" Class="text-capitalize" Text Rounded Href="@item.Slug.GetCategoryUrl()">@item.Name</MButton>
            </MCol>
        }
    </MRow>
}

@code
{
    [Parameter]
    public bool OnlyUseList { get; set; }
}

