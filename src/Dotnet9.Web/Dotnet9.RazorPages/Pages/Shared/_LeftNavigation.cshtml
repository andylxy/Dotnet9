@inject ICaller Caller
@{
    var albumBriefs = await Caller.GetAsync<List<AlbumBrief>>("/api/album/brief");
    var categoryBriefs = await Caller.GetAsync<List<CategoryBrief>>("/api/cat/brief");
}
<nav>
    <div class="topnav">
        <ul id="starlist">
            <li>
                <a href="index.html">最新文章</a>
            </li>
            <li>
                <a href="tuijian.html">推荐文章</a>
            </li>
            <li>
                <a href="hot.html">热门文章</a>
            </li>
            <li class="group">文章专辑</li>
            @foreach (var album in albumBriefs)
            {
                <li>
                    <a title="@album.Description" href="/album/@album.Slug">@album.Name (@album.BlogCount)</a>
                </li>
            }
            <li class="group">文章分类</li>
            @foreach (var cat in categoryBriefs)
            {
                <li>
                    <a title="@cat.Description" href="/cat/@cat.Slug">@cat.Name (@cat.BlogCount)</a>
                </li>
            }
        </ul>
    </div>
    <em></em>
</nav>