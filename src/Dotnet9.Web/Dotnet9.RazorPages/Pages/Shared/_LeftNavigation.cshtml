@inject ICaller Caller
@{
    var categoryBriefs = await Caller.GetAsync<List<CategoryBrief>>("/api/categories/brief");
}
<nav>
    <div class="topnav">
        <ul id="starlist">
            @if (categoryBriefs?.Count > 0)
            {
                <li class="group">文章分类</li>
                @foreach (var cat in categoryBriefs)
                {
                    <li>
                        <a title="@cat.Description" href="/categories/@cat.Slug">@cat.Name (@cat.BlogCount)</a>
                    </li>
                }
            }
        </ul>
    </div>
    <em></em>
</nav>