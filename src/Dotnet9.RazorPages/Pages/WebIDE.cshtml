@page "/ide"

@inject ISystemClientService SystemClientService
@{
    var siteInfo = await SystemClientService.GetSiteInfoAsync();
    Layout = "Shared/_CustomLayout";
    ViewData[ViewDataKeys.Title] = "在线IDE";
}

@section Headers
{
    <style>
        * {
            margin: 0;
            padding: 0
        }

        body {
            overflow: hidden;
        }

        iframe{
            position: absolute;
            width: 100%;
            height: 100%;
            }

    </style>
}

<iframe src="https://webassembly.tokengo.top:8843?home=@siteInfo?.Domain"></iframe>